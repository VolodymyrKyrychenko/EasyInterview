@model Web.Models.TestViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="form-group">
				<label asp-for="Number" class="control-label"></label>
				<input asp-for="Number" class="form-control" />
				<span asp-validation-for="Number" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input asp-for="Hidden" /> @Html.DisplayNameFor(model => model.Hidden)
					</label>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Input" class="control-label"></label>
				<input asp-for="Input" class="form-control" />
				<span asp-validation-for="Input" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Output" class="control-label"></label>
				<input asp-for="Output" class="form-control" />
				<span asp-validation-for="Output" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="ProblemId" class="form-control" hidden/>
			</div>
			<div class="form-group">
				<input type="reset" value="Reset">
				<input type="submit" value="Create" class="btn btn-default" />
				<a asp-area="" asp-controller="Test" asp-action="FinishTests">FinishTests</a>
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
